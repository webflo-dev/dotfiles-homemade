// Global
{
  "layer": "top",
  "position": "top",

  // If height property would be not present, it'd be calculated dynamically

  "modules-left": ["sway/workspaces", "sway/mode", "sway/window"],

  "modules-center": ["wlr/taskbar"],

  "modules-right": [
    "custom/weather",
    "network",
    "idle_inhibitor",
    "cpu",
    "memory",
    "temperature",
    "pulseaudio",
    "bluetooth",
    "keyboard-state",
    "sway/language",
    "battery",
    "backlight",
    "custom/sunset",
    "clock",
    "tray"
  ],

  "custom/sunset": {
    "interval": "once",
    "tooltip": true,
    "tooltip-format": "{title}",
    "return-type": "json",
    "format": "{icon}",
    "format-icons": {
      "on": "",
      "off": ""
    },
    "exec": "~/.config/waybar/scripts/sunset.sh",
    "on-click": "~/.config/waybar/scripts/sunset.sh toggle; pkill -RTMIN+6 waybar",
    "exec-if": "~/.config/waybar/scripts/sunset.sh check",
    "signal": 6
  },

  "bluetooth": {
    "format": "{icon}",
    "interval": 30,
    "format-icons": {
      "enabled": "",
      "disabled": ""
    },
    "on-click": "blueberry",
    "tooltip-format": "{}"
  },

  "wlr/taskbar": {
    "format": "{icon}",
    "icon-size": 14,
    "tooltip-format": "{title}",
    "on-click": "activate",
    "on-click-middle": "close"
  },

  // Modules
  "network": {
    "interval": 5,
    "format-wifi": "  {essid} ({signalStrength}%)",
    "format-ethernet": " {ipaddr}",
    "format-disconnected": "⚠  Disconnected",
    "tooltip-format": "{ipaddr} ({ifname})",
    "on-click": "footclient -a floating_shell nmtui"
  },
  "network#vpn": {
    "interface": "tun0",
    "format": "  {essid} ({signalStrength}%)",
    "format-disconnected": "⚠  Disconnected",
    "tooltip-format": "{ifname}: {ipaddr}"
  },

  "idle_inhibitor": {
    "format": "{icon} ",
    "format-icons": {
      "activated": "",
      "deactivated": ""
    }
  },

  "battery": {
    "states": {
      // "good": 95,
      "warning": 30,
      "critical": 15
    },
    "format": "{icon} {capacity}%",
    "format-charging": " {capacity}%",
    "format-plugged": " {capacity}%",
    // "format-good": "", // An empty format will hide the module
    // "format-full": "",
    "format-icons": ["", "", "", "", ""]
  },

  "clock": {
    "interval": 10,
    "format": "{:%e %b %Y %H:%M}",
    "tooltip": true,
    "tooltip-format": "<big>{:%B %Y}</big>\n<tt>{calendar}</tt>"
  },

  "sway/language": {
    "format": " {}"
  },
  // "sway/language": {
  //   "format": "{short} {variant}"
  // },
  "keyboard-state": {
    "numlock": true,
    "capslock": true,
    "format": "{name} {icon}",
    "format-icons": {
      "locked": "",
      "unlocked": ""
    }
  },

  "cpu": {
    "interval": 5,
    "format": " {usage}%",
    "states": {
      "warning": 70,
      "critical": 90
    },
    "on-click": "footclient -a floating_shell htop"
  },

  "memory": {
    "interval": 5,
    "format": " {}%",
    "on-click": "footclient -a floating_shell htop",
    "states": {
      "warning": 70,
      "critical": 90
    }
  },

  "temperature": {
    "critical-threshold": 90,
    "interval": 5,
    "format": "{icon} {temperatureC}°C",
    "format-icons": ["", "", ""],
    "tooltip": false,
    "on-click": "footclient -a floating_shell watch sensors"
  },

  "sway/mode": {
    "format": "{}",
    "tooltip": false
  },

  // "sway/window": {
  //   "format": "{}",
  //   "max-length": 120
  // },
  "sway/window": {
    "format": "{}",
    "max-length": 100
    // "rewrite": {
    //   "(.*) - Mozilla Firefox": "🌎 $1",
    //   "(.*) - vim": " $1",
    //   "(.*) - zsh": " [$1]"
    // }
  },

  "sway/workspaces": {
    "disable-scroll": true,
    "disable-markup": false,
    "all-outputs": true,
    "format": "  {icon}  ",
    //"format":"{icon}",
    "format-icons": {
      "1": "",
      "2": "",
      "3": "",
      "4": "",
      "5": "",
      "urgent": "",
      "focused": "",
      "default": ""
    }
  },

  "pulseaudio": {
    "scroll-step": 1, // %, can be a float
    "format": "{icon} {volume}%",
    "format-bluetooth": "{icon} {volume}%  {format_source}",
    "format-bluetooth-muted": " {icon}  {format_source}",
    "format-muted": " {format_source}",
    "format-source": " {volume}%",
    "format-source-muted": "",
    "format-icons": {
      "headphone": "",
      "headset": "  ",
      "phone": "",
      "portable": "",
      "default": [""]
    },
    "on-click": "pavucontrol"
    // "on-scroll-up": "pamixer -ui 2",
    // "on-scroll-down": "pamixer -ud 2"
  },

  "custom/weather": {
    "icon-size": 42,
    "format": "{icon} {}",
    "tooltip": true,
    "interval": 3600,
    // accepts a location as an argument (in quotes)
    "exec": "~/.config/waybar/scripts/weather.py Paris",
    "return-type": "json",
    "format-icons": {
      "Unknown": "✨",
      "Cloudy": "☁️",
      "Fog": "🌫",
      "HeavyRain": "🌧",
      "HeavyShowers": "🌧",
      "HeavySnow": "❄️",
      "HeavySnowShowers": "❄️",
      "LightRain": "🌦",
      "LightShowers": "🌦",
      "LightSleet": "🌧",
      "LightSleetShowers": "🌧",
      "LightSnow": "🌨",
      "LightSnowShowers": "🌨",
      "PartlyCloudy": "⛅️",
      "Sunny": "☀️",
      "ThunderyHeavyRain": "🌩",
      "ThunderyShowers": "⛈",
      "ThunderySnowShowers": "⛈",
      "VeryCloudy": "☁️"
    }
  },

  "tray": {
    "icon-size": 18,
    "spacing": 10
  },

  "backlight": {
    "device": "intel_backlight",
    "format": "{icon} {percent}%",
    "format-icons": ["", ""]
  }
}
